<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/success"
    app:cardCornerRadius="12dp"
    android:layout_margin="16dp"
    android:id="@+id/card"
    >

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/text_color_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/centerCon"
            android:layout_marginTop="12dp"
            android:layout_below="@id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop"
                app:riv_corner_radius="12dp"
                />

            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_date_range_24"
                    android:drawableTint="@color/text_color_black"
                    android:drawablePadding="6dp"
                    android:text="date"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_black"
                    />

                <TextView
                    android:id="@+id/ticketCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_article_24"
                    android:drawableTint="@color/text_color_black"
                    android:drawablePadding="6dp"
                    android:text="2 tickets"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_color_black"
                    />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_monetization_on_24"
                    android:drawableTint="@color/text_color_black"
                    android:drawablePadding="6dp"
                    android:text="Baha: 20 TMT"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_color_black"
                    />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_money_24"
                    android:drawableTint="@color/text_color_black"
                    android:drawablePadding="6dp"
                    android:text="Petek arzanladyÅŸ: 30%"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_color_black"
                    />

            </LinearLayout>







        </LinearLayout>

        <TextView
            android:id="@+id/userFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerCon"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="6dp"
            android:drawableTint="@color/text_color_black"
            android:text="Sargyt ediji: "
            android:textColor="@color/text_color_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userFullName"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/ic_baseline_monetization_on_24"
            android:drawablePadding="6dp"
            android:drawableTint="@color/text_color_black"
            android:text="Jemi bahasy: 1"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>